<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="10dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
android:background="#FFFFFF"
android:elevation="2dp"
android:layout_margin="8dp"
android:clipToPadding="false"
android:backgroundTint="#FFFFFF">

<!-- Tên Trẻ -->
<TextView
    android:id="@+id/tvChildName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tên Trẻ"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#2E7D32"
    android:padding="12dp"
    android:background="#C8E6C9"
    android:gravity="center"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#C8E6C9" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="3dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="#F1F8E9"
    android:clipToPadding="false"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/bg_card_rounded">

    <!-- Lịch nhắc -->
    <LinearLayout
        android:id="@+id/btnReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_grid"
            android:tint="#4CAF50"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch nhắc"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Nhật ký -->
    <LinearLayout
        android:id="@+id/btnDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_diary"
            android:tint="#4CAF50"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhật ký chăm sóc"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Chỉnh sửa -->
    <LinearLayout
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit1"
            android:tint="#4CAF50"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
    </ScrollView>
